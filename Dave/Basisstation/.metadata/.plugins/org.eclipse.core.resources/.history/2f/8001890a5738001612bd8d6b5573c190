#include <XMC4500.h>
#include <xmc_gpio.h>

void set_TDA_status(uint8_t TDA, uint8_t status){
if(status==0){
//set P_ON Pin low; Pins were set as Output in init()
if(TDA==0||TDA==1){ XMC_GPIO_SetOutputLow(XMC_GPIO_PORT1, led);}
if(TDA==0||TDA==2){ XMC_GPIO_SetOutputLow(XMC_GPIO_PORT1, led);}
if(TDA==0||TDA==3){ XMC_GPIO_SetOutputLow(XMC_GPIO_PORT1, led);}
if(TDA==0||TDA==4){ XMC_GPIO_SetOutputLow(XMC_GPIO_PORT1, led);}
if(TDA==0||TDA==5){ XMC_GPIO_SetOutputLow(XMC_GPIO_PORT1, led);}
if(TDA==0||TDA==6){ XMC_GPIO_SetOutputLow(XMC_GPIO_PORT1, led);}

}else if(status==1){
//set P_ON Pin high

}

}
