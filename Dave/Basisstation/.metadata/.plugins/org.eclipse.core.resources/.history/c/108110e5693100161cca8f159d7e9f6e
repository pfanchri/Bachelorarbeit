#include <XMC4500.h>
#include <xmc_gpio.h>
#include <xmc_usic.h>
#include <xmc_spi.h>
#include "spi.h"
#include "portmakros.h"

int main(void) {
	uint16_t spi_array_tx[10] = { 0 };
	uint16_t spi_array_rx[10] = { 0 };

	spi_init(spi_master_ch);
	spi_transfer(spi_master_ch, 0, spi_array_tx, spi_array_rx, 3);

	/* Loop forever */
	while (1) {
	}
}


