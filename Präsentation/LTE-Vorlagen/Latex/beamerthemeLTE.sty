\newcommand*{\@setupframenumberswidth}{
    \settowidth{\beamer@framenumbers@width}{%
    \usebeamerfont*{footline}%
    \ifbeamer@theme@hideframetotal%
        \resizebox{!}{0.6em}{\shadowtextline{\insertlastframe}}%
    \else%
        \resizebox{!}{0.6em}{\shadowtextline{\insertlastframe\,/\,\insertlastframe}}%
    \fi%
  }%
}

